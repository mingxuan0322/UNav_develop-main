<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".StartActivity"
    android:background="@drawable/gradient_list"
    android:id="@+id/startactivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="311dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/logo"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="293dp"
        android:textStyle="bold"
        android:shadowColor=" #ff0000 "
        android:textColor="#ffffff"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="10"
        android:text="Localization interval:"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="268dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="313dp"
        android:textStyle="bold"
        android:shadowColor=" #ff0000 "
        android:textColor="#ffffff"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="10"
        android:text="s"
        android:textSize="15dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/localization_interval"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="196dp"
        android:layout_marginTop="382dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="303dp"
        android:textStyle="bold"
        android:shadowColor=" #ff0000 "
        android:textColor="#ffffff"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="10"
        android:text="10"
        android:inputType="number"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="256dp"
        android:layout_marginBottom="440dp"
        android:textStyle="bold"
        android:shadowColor=" #ff0000 "
        android:textColor="#ffffff"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="10"
        android:text="Port ID:"
        android:textSize="15dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/port_id"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="395dp"
        android:textStyle="bold"
        android:shadowColor=" #ff0000 "
        android:textColor="#ffffff"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="30"
        android:text="30002"
        android:hint="XXXXX"
        android:inputType="number"
        android:textSize="15dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/server_id"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="485dp"
        android:textStyle="bold"
        android:shadowColor=" #ff0000 "
        android:textColor="#ffffff"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="10"
        android:text="128.122.136.119"
        android:hint="XXX.XXX.XXX.XXX"
        android:inputType="number"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="163dp"
        android:layout_marginEnd="220dp"
        android:layout_marginBottom="381dp"
        android:shadowColor="#ff0000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="10"
        android:text="Server ID:"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold" />

    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/start_navigation"
        android:layout_width="wrap_content"
        android:layout_height="157dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="94dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:shadowColor=" #ff0000 "
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="10"
        android:textSize="30dp"
        android:text="Connect"
        android:layout_centerInParent="true"
        app:buttonColor="#ff9722"
        app:unpressedGlowSize="20dp"
        app:pressedGlowSize="25dp"
        app:glowColor="#ff9722"
        app:cornerRadius="50dp"/>

</RelativeLayout>